{
  "compilerOptions": {
    "strict": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],

    "outDir": "build",
    "declaration": true
  }
}
