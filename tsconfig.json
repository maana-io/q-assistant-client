{
  "include": ["src/**/*"],

  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "esModuleInterop": true,
    // "noImplicitAny": true,
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",

    // Generate d.ts files
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dts"
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "typedocOptions": {
    "entryPoint": "src/index.ts",
    "name": "Maana Q Assistant API Client",
    "mode": "file",
    "out": "docs",
    "plugin": "typedoc-plugin-markdown",
    "excludePrivate": true,
    "excludeNotExported": true,
    "readme": "none",
    "gitRevision": "develop"
  }
}
